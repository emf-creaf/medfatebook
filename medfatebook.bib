	author = {Flerchinger, G. N. and Xiao, W. and Sauer, T. J. and Yu, Q.},
	year = {2009},
	keywords = {Diffuse radiation, Ellipsoidal leaf angle distribution, Long-wave radiation, Maize canopy, Short-wave radiation, Soya bean canopy, Surface energy balance, Wheat canopy},
