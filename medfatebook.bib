@article{Ma2019,
	title = {An {Advanced} {Multiple}-{Layer} {Canopy} {Model} in the {WRF} {Model} {With} {Large}-{Eddy} {Simulations} to {Simulate} {Canopy} {Flows} and {Scalar} {Transport} {Under} {Different} {Stability} {Conditions}},
