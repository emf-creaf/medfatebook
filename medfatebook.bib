	pages = {2839--2851},
	file = {Michaletz i Johnson - 2006 - A heat transfer model of crown scorch in forest fi.pdf:/home/miquel/Zotero/storage/NPMN9CCI/Michaletz i Johnson - 2006 - A heat transfer model of crown scorch in forest fi.pdf:application/pdf},
